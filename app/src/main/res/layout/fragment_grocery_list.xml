<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.rashminidhi.smartgrocery.GroceryListFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sampleButton"
        android:text="Sample Product"
        android:layout_margin="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="26sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addProduct"
        android:text="Add Product"
        android:layout_margin="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="26sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewAddedProduct"
        android:text="View Added Product"
        android:layout_margin="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="26sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/previousAddedList"
        android:text="Previous Added List"
        android:layout_margin="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="26sp"/>

</LinearLayout>
